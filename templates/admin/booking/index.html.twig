{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des réservations</h1>
    <table class="table table-hover">
        <thead class="tr">
            <th class="text-center">Id</th>
            <th >Date</th>
            <th>Visiteur</th>
            <th >Annonce</th>
            <th >Durée</th>
            <th >Montant</th>
            <th class="text-center">Actions</th>
        </thead>
        <tbody>
            {% for booking in bookings %}
                <tr class="align-items-center">
                    <td class="text-center">{{booking.id}}</td>
                    <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                    <td>
                        <img src="{{booking.booker.picture}}" alt="Avatar de {{ booking.booker.fullName }}" class="avatar avatar-micro mr-2">
                        {{booking.booker.fullName}}
                    </td>
                    <td>{{booking.ad.title}}</td>
                    <td>{{booking.getDuration}}</td>
                    <td>{{booking.amount | number_format(2, ',', ' ' )}} &euro;</td>
                    <td class="text-center">
                        <a href="{{ path('admin_bookings_edit', {'id': booking.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_bookings_delete', {'id': booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item {% if page - 1 <= 0 %}disabled{% endif %}">
                <a class="page-link" href="{% if page - 1 > 0 %}{{path('admin_bookings_index', {'page': page - 1 })}}{% else %}#{% endif %}">&laquo;</a>
            </li>
            {% for i in 1..total_pages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" href="{{path('admin_bookings_index', {'page': i})}}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if page + 1 > total_pages %}disabled{% endif %}">
                <a class="page-link" href="{% if page + 1 <= total_pages %}{{path('admin_bookings_index', {'page': page + 1 })}}{% else %}#{% endif %}">&raquo;</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
