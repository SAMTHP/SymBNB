{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des commmentaires</h1>
    <table class="table table-hover">
        <thead class="tr">
            <th class="text-center">Id</th>
            <th >Date</th>
            <th>Auteur</th>
            <th >Commentaire</th>
            <th class="text-center">Note</th>
            <th class="text-center">Annonce</th>
            <th class="text-center">Actions</th>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr class="align-items-center">
                    <td class="text-center">{{comment.id}}</td>
                    <td>{{comment.createdAt | date('d/m/Y H:i')}}</td>
                    <td>
                        <img src="{{comment.author.picture}}" alt="Avatar de {{ comment.author.fullName }}" class="avatar avatar-micro mr-2">
                        {{comment.author.fullName}}
                    </td>
                    <td>{{comment.content}}</td>
                    <td class="text-center">
                        <span class="badge badge-dark rounded">{{comment.rating | number_format(1,',',' ')}}</span>
                    </td>
                    <td class="text-center">
                        {{comment.ad.title}}</span>
                    </td>
                    <td class="text-center">
                        <a href="{{path('admin_comments_edit', {'id': comment.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_comments_delete', {'id': comment.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item {% if page - 1 <= 0 %}disabled{% endif %}">
                <a class="page-link" href="{% if page - 1 > 0 %}{{path('admin_comments_index', {'page': page - 1 })}}{% else %}#{% endif %}">&laquo;</a>
            </li>
            {% for i in 1..total_pages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" href="{{path('admin_comments_index', {'page': i})}}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item {% if page + 1 > total_pages %}disabled{% endif %}">
                <a class="page-link" href="{% if page + 1 <= total_pages %}{{path('admin_comments_index', {'page': page + 1 })}}{% else %}#{% endif %}">&raquo;</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
