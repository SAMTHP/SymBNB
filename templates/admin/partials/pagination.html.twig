<div class="d-flex justify-content-center">
    <ul class="pagination">
        <li class="page-item {% if page - 1 <= 0 %}disabled{% endif %}">
            <a class="page-link" href="{% if page - 1 > 0 %}{{path(route, {'page': page - 1 })}}{% else %}#{% endif %}">&laquo;</a>
        </li>
        {% for i in 1..pages %}
            <li class="page-item {% if page == i %}active{% endif %}">
                <a class="page-link" href="{{path(route, {'page': i})}}">{{ i }}</a>
            </li>
        {% endfor %}
        <li class="page-item {% if page + 1 > pages %}disabled{% endif %}">
            <a class="page-link" href="{% if page + 1 <= pages %}{{path(route, {'page': page + 1 })}}{% else %}#{% endif %}">&raquo;</a>
        </li>
    </ul>
</div>