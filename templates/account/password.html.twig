{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modification du mot de passe</h1>

        {{ form_start(form) }}
            <div class="alert alert-light">
                <h2 class="alert-heading">Informations</h2>
                <hr>
                {{form_row(form.oldPassword)}}
                {{form_row(form.newPassword)}}
                {{form_row(form.confirmPassword)}}
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Modifier le mot de passe <i class="fas fa-key"></i> </button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}