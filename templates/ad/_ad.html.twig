{% set ad_show = path("ads_show", {'slug': ad.slug}) %}

<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong> <br>
            <small>Pas encore not√©</small>
        </div>
        <a href="{{ ad_show }}">
            <img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 200px; width: 100%; display: block;">
        </a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="{{ ad_show }}" class="text-muted">
                    {{ ad.title }}
                </a>
            </h4> 
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a href="{{ ad_show }}" class="btn btn-primary">En savoir plus !</a> 
        </div>
    </div> 
</div>